        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="StatsWin" Height="298.47" Width="354.591">
    <StackPanel MinWidth="200" Width="347.075" RenderTransformOrigin="0.504,0.811" Margin="0,0,-0.484,-12.734">
