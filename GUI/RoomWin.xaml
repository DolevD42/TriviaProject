<Window x:Class="GUI.RoomWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="RoomWin" Height="600" Width="800">
    <ScrollViewer Margin="0,0,524,163">
        <StackPanel MinWidth="200" Width="320" Height="349.5">
            <TextBlock x:Name="RoomName" Text="" TextAlignment="Center" />
            <TextBlock Text="Ready For Some Trivia??" TextAlignment="Center" />
            <TextBlock x:Name="PlayersNum" TextAlignment="Center" Text="" Width="251" Height="21"/>
            <TextBlock x:Name="QuestionNum" TextAlignment="Center" Text="" Width="251" Height="21"/>
            <TextBlock x:Name="QuestionTime" TextAlignment="Center" Text="" Width="251" Height="21"/>
            <ListView x:Name="Players" Height="100" Width="207"/>
            <Button x:Name="StartGame" Content="Start Game" VerticalAlignment="Top" Click="StartGame_Click" Width="96"/>
        </StackPanel>
    </ScrollViewer>
</Window>
